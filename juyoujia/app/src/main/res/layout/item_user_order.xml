<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_background"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_order_id"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="middle"
            android:singleLine="true"
            android:textColor="@color/color9"
            android:textSize="@dimen/text_12sp" />

        <ImageView
            android:id="@+id/iv_order_id"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_marginLeft="15dip"
            android:scaleType="center"
            android:src="@mipmap/order_id_copy" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dip"
        android:background="#E6E6E6"></View>

    <LinearLayout
        android:id="@+id/lin_order_goods"
        android:layout_width="match_parent"
        android:layout_height="70dip"
        android:layout_marginTop="10dip"
        android:gravity="center_vertical">

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/child_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true" />

            <View
                android:id="@+id/v_goods_ico"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"></View>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:background="@color/white"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_uo_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color35"
                android:textSize="@dimen/text_16sp" />

            <TextView
                android:id="@+id/tv_shopping_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_uo_info"
                android:layout_marginTop="3dip"
                android:textColor="@color/tabwd"
                android:textSize="@dimen/text_12sp" />

            <TextView
                android:id="@+id/tv_uo_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_shopping_number"
                android:layout_marginTop="3dip"
                android:drawablePadding="10dip"
                android:drawableRight="@mipmap/user_right_zs"
                android:textColor="@color/tabwd"
                android:textSize="@dimen/text_14sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:gravity="center_vertical|right"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_shape_item_ce4"
            android:paddingBottom="2dip"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:paddingTop="2dip"
            android:text=""
            android:textColor="@color/color62"
            android:textSize="@dimen/text_10sp"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:textColor="@color/black"
            android:textSize="@dimen/text_12sp" />
    </LinearLayout>

    <View
        android:id="@+id/v_live"
        android:layout_width="match_parent"
        android:layout_height="0.1dip"
        android:layout_marginTop="15dip"
        android:background="#E6E6E6"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_order_c_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color9"
                android:textSize="@dimen/text_11sp" />

            <TextView
                android:id="@+id/tv_order_l_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_order_c_time"
                android:layout_marginTop="5dip"
                android:textColor="@color/color9"
                android:textSize="@dimen/text_11sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lin_uo_operation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

        <TextView
            android:id="@+id/tv_uo_operation1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/bg_shape_order1"
            android:paddingBottom="8dip"
            android:paddingLeft="13dip"
            android:paddingRight="13dip"
            android:paddingTop="8dip"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/text_13sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_uo_operation2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="15dip"
            android:background="@drawable/bg_shape_order"
            android:paddingBottom="8dip"
            android:paddingLeft="13dip"
            android:paddingRight="13dip"
            android:paddingTop="8dip"
            android:text=""
            android:textColor="@color/color37"
            android:textSize="@dimen/text_13sp"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>