<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_product_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:padding="@dimen/padding_size_10">

   <LinearLayout
       android:layout_width="0dip"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_weight="1">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:id="@+id/tv_user_integral_title"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:ellipsize="end"
               android:lines="1"
               android:textColor="#333333"
               android:textSize="@dimen/text_16sp" />
           <TextView
               android:id="@+id/tv_user_integral_status"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/tv26"
               android:paddingTop="1dip"
               android:paddingBottom="1dip"
               android:paddingLeft="5dip"
               android:paddingRight="5dip"
               android:textColor="@color/white"
               android:layout_marginLeft="10dip"
               android:layout_toRightOf="@+id/tv_user_integral_title"
               android:background="@drawable/bg_shape_hometype"
               android:visibility="gone"
               android:textSize="@dimen/text_14sp" />
       </RelativeLayout>

       <TextView
           android:id="@+id/tv_user_integral_time"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textColor="@color/tabwd"
           android:layout_marginTop="5dip"
           android:textSize="@dimen/text_14sp" />

   </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:gravity="center|right"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_user_integral_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:gravity="right"
            android:textSize="@dimen/text_18sp" />
        <TextView
            android:id="@+id/tv_user_integral_sm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:visibility="gone"
            android:layout_marginTop="5dip"
            android:textSize="@dimen/text_12sp" />
    </LinearLayout>
</LinearLayout>