<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_background"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="15dip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_order_id"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:ellipsize="middle"
            android:singleLine="true"
            android:textColor="@color/color9"
            android:textSize="@dimen/text_12sp" />

        <ImageView
            android:id="@+id/copy_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/order_id_copy" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dip"
        android:layout_marginTop="10dp"
        android:background="#E6E6E6"></View>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/recharges_decription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="2"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:textSize="@dimen/text_16sp" />
        <TextView
            android:id="@+id/recharges_inprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_marginLeft="15dip"
            android:textSize="@dimen/text_16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_co_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lineSpacingExtra="5dp"
            android:lines="2"
            android:textSize="@dimen/text_12sp" />

        <TextView
            android:id="@+id/tv_uo_status"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dip"
            android:textColor="#FFBB17"
            android:gravity="bottom"
            android:textSize="@dimen/text_16sp" />
    </LinearLayout>

    <View
        android:id="@+id/v_live"
        android:layout_width="match_parent"
        android:layout_height="0.1dip"
        android:layout_marginTop="15dip"
        android:background="#E6E6E6">
    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dip"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_order_c_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color9"
            android:textSize="@dimen/text_12sp" />

        <TextView
            android:id="@+id/recharge_fail_descrip"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#FFBB17"
            android:layout_marginTop="9.5dp"
            android:maxLines="2"
            android:visibility="gone"
            android:textSize="@dimen/text_12sp" />
    </LinearLayout>
</LinearLayout>