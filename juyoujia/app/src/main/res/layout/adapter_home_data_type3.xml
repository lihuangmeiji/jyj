<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dip"
    android:paddingBottom="10dip"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/rel_uservip"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_hometitle"
            android:layout_width="0dip"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_16sp"
            android:layout_alignParentBottom="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/black"/>

        <com.idougong.jyj.widget.ImageView_16_9
            android:id="@+id/tv_homeimg1"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:layout_marginLeft="20dip"
            android:layout_height="wrap_content"
            android:src="@mipmap/img_zw"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_hometype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_shape_hometype"
            android:paddingBottom="1dip"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:paddingTop="1dip"
            android:textColor="@color/color4"
            android:textSize="@dimen/text_14sp" />

        <TextView
            android:id="@+id/tv_homename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:textColor="@color/color4"
            android:textSize="@dimen/text_14sp" />

        <TextView
            android:id="@+id/tv_hometime"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_weight="1"
            android:textColor="@color/color4"
            android:textSize="@dimen/text_14sp" />

        <TextView
            android:id="@+id/tv_jf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textColor="@color/color5"
            android:textSize="@dimen/text_14sp" />
    </LinearLayout>
</LinearLayout>