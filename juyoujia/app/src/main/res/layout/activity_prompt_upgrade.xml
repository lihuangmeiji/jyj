<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="30dip"
    android:paddingRight="30dip"
    tools:context=".module.ui.home.PromptUpgradeActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/lin_down_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dip"
            android:background="@drawable/white_background"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center"
                android:text="@string/tv25"
                android:layout_marginTop="100dip"
                android:textColor="@color/color65"
                android:textSize="@dimen/text_20sp" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:paddingLeft="30dip"
                android:paddingRight="30dip"
                android:text="@string/tv118"
                android:layout_marginTop="30dip"
                android:textColor="#A5A5A5"
                android:textSize="@dimen/text_16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="80.0dip">
                <TextView
                    android:id="@+id/btn_dialog_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:text="@string/tv26"
                    android:textColor="@color/black"
                    android:visibility="gone"
                    android:textSize="@dimen/text_14sp"
                    />

                <TextView
                    android:id="@+id/btn_dialog_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="45dip"
                    android:layout_marginLeft="30dip"
                    android:layout_marginRight="30dip"
                    android:gravity="center"
                    android:visibility="visible"
                    android:text="去升级"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_shape_down_loading"
                    android:textSize="@dimen/text_14sp"
                    />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="190dip"
            android:layout_height="130dip"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/down_bs"/>
        <ImageView
            android:id="@+id/iv_dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/lin_down_content"
            android:layout_marginTop="30dip"
            android:src="@mipmap/red_envelope_close"/>
    </RelativeLayout>
</LinearLayout>