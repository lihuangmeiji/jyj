<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color39"
    tools:context=".module.ui.users.DeliveryAddressInfoActivity">
    <View
        android:id="@+id/status_bar_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_statue_height"
        android:background="@color/white" />

    <include layout="@layout/layout_toolbar" />

    <ViewStub
        android:id="@+id/vs_showerror"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout="@layout/layout_empty" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_user_delivery_address"
        android:layout_width="match_parent"
        android:layout_marginTop="10dip"
        android:layout_height="0dip"
        android:layout_weight="1"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="60dip">
        <TextView
            android:id="@+id/tv_add_delivery_address"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:text="@string/tv47"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/bg_shape_ellipse"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</LinearLayout>