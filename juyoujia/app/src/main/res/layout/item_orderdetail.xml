<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dip">

    <ImageView
        android:id="@+id/iv_co_ico"
        android:layout_width="50dip"
        android:layout_height="50dip"
        />

    <RelativeLayout
        android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_marginLeft="10dip"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_co_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="@dimen/text_14sp" />
        <TextView
            android:id="@+id/tv_co_sku"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dip"
            android:layout_below="@+id/tv_co_name"
            android:lineSpacingExtra="3dip"
            android:textColor="@color/tabwd"
            android:textSize="@dimen/text_12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip">
        <TextView
            android:id="@+id/tv_co_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/text_16sp" />

        <TextView
            android:id="@+id/tv_co_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/tv_co_price"
            android:textColor="@color/tabwd"
            android:layout_marginTop="5dip"
            android:layout_below="@+id/tv_co_price"
            android:textSize="@dimen/text_12sp" />
    </RelativeLayout>
</LinearLayout>